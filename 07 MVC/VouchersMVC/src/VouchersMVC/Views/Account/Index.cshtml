@model  IEnumerable<Vouchers.BalanceAccount>

@{
}
<div>
    <h3>Accounts</h3>
    <table class="table table-striped table-bordered table-hover">
        <colgroup>
            <col style="width: 10%"/>
            <col style="width: 60%"/>
            <col style="width: 10%"/>
            <col style="width: 10%"/>
            <col style="width: 10%"/>
        </colgroup>
        <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Expense</th>
            <th colspan="2"><a asp-controller="Account" asp-action="Create">Create</a></th>
        </tr>
        </thead>
        <tbody id="tblVoucherBody">
        @foreach (var v in Model)
        {
            <tr >
                <td> @v.ID </td>
                <td> @v.Name</td>
                <td> @v.Expense </td>
                <td><a asp-controller="Account" asp-action="Edit" asp-route-id="@v.ID">Edit</a></td>
                <td><a asp-controller="Account" asp-action="Delete" asp-route-id="@v.ID">Delete</a></td>
            </tr>
        }
        </tbody>
    </table>
</div>
