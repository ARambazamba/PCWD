{
    "version": "0.1.0",
    "tasks": [
        {
            "taskName": "tsc",
            "command": "tsc",
            "args": ["-w"],
            "isShellCommand": true,
            "isBackground": true,
            "problemMatcher": "$tsc-watch"
        },
        {
            "taskName": "build",
            "command": "dotnet",
            "args": ["${workspaceRoot}/project.json"],
            "isBuildCommand": true,
            "problemMatcher": "$msCompile"
        }       
    ]
}